<head>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<main class="TodoPageMain">
  <article>
    <h1 class="TodoPage-title">My Todo-list</h1>
      <%= form_with(url: "/todos", method: "post", class: "AddTodo" ) do %>
        <%= text_field_tag("todo_text", '',
                                                  placeholder: "What's Next?",
                                                  class: "AddTodo-text"
                                                  )
        %>
      <%= date_field_tag("due_date", '', class:"AddTodo-date") %>
      <%= button_tag("Add", type: "submit", class:"AddTodo-button") %>
      <% end %>

          <%=render partial: "todos-section",  locals:  {
                    section_title:  "Overdue",
                    todos: @todos.overdue,
                    show_due_date: true
                    }
          %>

          <%= render partial: "todos-section",  locals:  {
                      section_title:  "Due Today",
                      todos: @todos.due_today,
                      show_due_date: false,
                    }
          %>

          <%= render partial: "todos-section",  locals:  {
                      section_title:  "Due Later",
                      todos: @todos.due_later,
                      show_due_date: true,
          }
          %>

  </article>
</main>
