<head>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<main class="TodoPageMain">
  <article>
    <h1 class="TodoPage-title">My Todo-list</h1>
    <form class="AddTodo"
                  action ="/todos"
                  method ="POST"
    >
      <input class="AddTodo-text" type="text" placeholder="What's next ?"
      name="todo_text">
      <input class="AddTodo-date" type="date" name="due_date">
      <input class="AddTodo-button" type="submit" value="Add">
    </form>

          <%=render partial: "todos-section",  locals:  {
                    section_title:  "Overdue",
                    todos: Todo.overdue,
                    show_due_date: true
                    }
          %>

          <%= render partial: "todos-section",  locals:  {
                      section_title:  "Due Today",
                      todos: Todo.due_today,
                      show_due_date: false,
                    }
          %>

          <%= render partial: "todos-section",  locals:  {
                      section_title:  "Due Later",
                      todos: Todo.due_later,
                      show_due_date: true,
          }
          %>

  </article>
</main>
